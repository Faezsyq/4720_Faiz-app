<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="556dp"
        android:layout_height="857dp"
        android:background="@drawable/download"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-63dp"
        tools:layout_editor_absoluteY="-26dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26577C"
        android:backgroundTint="#DD330707"
        android:backgroundTintMode="multiply"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="248dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#3F51B5"
        android:backgroundTint="#5C2BB3"
        android:contextClickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFIL MAHASISWA"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="118dp"
            android:layout_height="113dp"
            android:src="@drawable/fotosaya"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ValueNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:text="Faizal Hanif Asy Syauqi"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/ValueNIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.01.4720"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/ValueProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D3 Teknik Informatika"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>